---
title: Produkte
header: none
---

<div class="slide">
  <div class="hero">
    Krass
    <h1 class="hero--title">Test</h1>
  </div>
</div>

<div class="slide">
  <div class="row__fluid row__gutterless">

    <%
      products = data.nadler.products
        .map { |p| p.last }
        .reject { |p| p.categories.nil? }
        .select { |p|
          p.categories
            .map { |c| c.id }
            .include?(category.id) }
    %>

    <% products.each do |p| %>
      <% image = !p.images.nil? ? "#{p.images.first.url}?fit=thumb&r=0&w=500&h=500" : "http://loremflickr.com/500/500/worker,street/all" %>
      <div class="small-6 medium-6 large-4">
        <a href="/products/<%= p.slug %>.html" class="tile lorem-img" style="background-image: url(<%= image %>)">
          <h2 class="tile--title"><span class="text-light"><%= p.name %></span></h2>
        </a>
      </div>

    <% end %>
  </div>
</div>
